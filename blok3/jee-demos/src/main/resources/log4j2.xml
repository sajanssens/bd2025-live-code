<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="pattern_level_colors">
            FATAL=bold magenta, ERROR=red, WARN=yellow bold, INFO=WHITE, DEBUG=green bold, TRACE=blue
        </Property>
        <property name="logpattern">
            %highlight{[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{10} - %msg}{${pattern_level_colors}}
        </property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="${logpattern}"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Raw HTTP (request/response bytes) for HttpClient 4.x -->
        <Logger name="org.apache.http.wire" level="DEBUG"/>

        <!-- Optional: headers/details -->
        <Logger name="org.apache.http.headers" level="DEBUG"/>

        <!-- Raw HTTP for HttpClient 5.x (if using 5.x instead of 4.x) -->
        <Logger name="org.apache.hc.client5.http.wire" level="DEBUG"/>

        <Logger name="com.infosupport" level="DEBUG"/>

        <Logger name="org.hibernate" level="INFO"/>
        <Logger name="org.hibernate.SQL" level="DEBUG"/>
        <Logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>

        <Root level="INFO">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
