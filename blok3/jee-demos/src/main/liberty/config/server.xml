<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <variable name="MYSQL_HOSTNAME" defaultValue="localhost"/>
    <variable name="MYSQL_PORT" defaultValue="3306"/>
    <variable name="MYSQL_DATABASE" defaultValue="beers-db"/>
    <variable name="MYSQL_ROOT_PASSWORD" defaultValue="root"/>
    <variable name="MYSQL_USE_SSL" defaultValue="true"/>

    <featureManager>
        <feature>jakartaee-10.0</feature>
        <feature>microprofile-6.1</feature>
        <feature>jsonb-3.0</feature>
        <!--<feature>servlet-6.0</feature>
<feature>pages-3.1</feature>
<feature>restfulWS-3.1</feature>
<feature>jsonb-3.0</feature>
<feature>cdi-4.0</feature>
<feature>persistence-3.1</feature>
<feature>mpOpenAPI-3.1</feature>
<feature>mpJwt-2.1</feature>
<feature>enterpriseBeans-4.0</feature>-->
        <!--<feature>messaging-3.1</feature>
        <feature>messagingServer-3.0</feature>
        <feature>messagingClient-3.0</feature>-->
        <!--        <feature>mpHealth-4.0</feature> &lt;!&ndash; Needed for test containers and docker compose &ndash;&gt;-->
    </featureManager>

    <logging consoleLogLevel="INFO"/>

    <!-- Basic user registry for EJB/ORB support -->
    <basicRegistry id="basic">
        <user name="admin" password="admin"/>
    </basicRegistry>

    <library id="jdbcLibrary">
        <fileset dir="jdbcLib" includes="*.jar"/>
    </library>

    <dataSource id="DefaultDataSource" jndiName="jdbc/beers">
        <jdbcDriver libraryRef="jdbcLibrary"/>
        <properties serverName="${MYSQL_HOSTNAME}" portNumber="${MYSQL_PORT}" databaseName="${MYSQL_DATABASE}"
                    user="root" password="${MYSQL_ROOT_PASSWORD}"
                    useSSL="${MYSQL_USE_SSL}" allowPublicKeyRetrieval="true" serverTimezone="UTC"/>
    </dataSource>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9080" httpsPort="9443"/>
    <applicationManager autoExpand="true"/>
    <ssl id="defaultSSLConfig" trustDefaultCerts="true"/>
    <applicationMonitor updateTrigger="polled"/>

    <application id="jee-demos" location="jee-demos.war" type="war">
        <context-root>/jee-demos</context-root>
    </application>

</server>

